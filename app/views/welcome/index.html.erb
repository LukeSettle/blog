<script>
    $(function(){
        
        // click hide button and hide photos and btn1 //
        $("#btn1") .on("click", function() {
            $(".pic") .fadeOut(800, function(){
                $("#btn1").addClass("btnHide")});
        });
        
        // click btn1 and show btn2 //
        $("#btn1").on("click", function(){
            $("#btn2").removeClass("btnHide")});
        
        // on click, show pics. Hide btn2 //
        $("#btn2").on("click",function(){
            $(".pic").fadeIn(800,function(){
                $("#btn2").addClass("btnHide")
            });
        });
        
        //on click of btn2, show btn 1//
        $("#btn2").on('click',function(){
            $("#btn1").removeClass("btnHide")});
        
        
        
        
        
        

        $("#sylvia") .on("click", function() {
            $("#sylvia") .toggleClass("enlarge")});
        
        
             $("#sylviaAtTheGame") .on("click", function() {
            $("#sylviaAtTheGame") .toggleClass("enlarge")});
        
        
         $("#littleSylvia") .on("click", function() {
            $("#littleSylvia") .toggleClass ("enlarge")});
          
    });
    
    
    
