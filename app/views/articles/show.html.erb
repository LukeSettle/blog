<div class='backOpacity'> </div>

<div class='backgroundImg'>
	<img src='/images/onThePeer.jpg' height='100%' width='100%'>
</div>
<p class='show-title'>
    <strong>Title:</strong>
    <%= @article.title %>
</p>

<p class='show-text'>
    <strong>Text:</strong>
    <%= @article.text %>
</p>

<div class='table-links'>
	<%= link_to 'Home', controller: 'welcome' %>
	<%= link_to 'Edit', edit_article_path(@article) %>
	<%= link_to 'New', new_article_path %>
	<%= link_to 'Delete', article_path,
	method: :delete,
	data: {confirm: 'Are you sure?'} %>
</div>